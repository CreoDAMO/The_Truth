modules = ["web", "nodejs-20", "bash"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Start Minting App"

[[workflows.workflow]]
name = "Start Minting App"
author = 46990582
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node web/server.js"

[[workflows.workflow]]
name = "Universal Deploy"
author = 46990582
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x deploy-everywhere.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Ready for universal deployment! Use: npm run deploy:[platform]\""

[[workflows.workflow]]
name = "Deploy to GitHub Pages"
author = 47038706
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x build-static.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./build-static.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git add dist/"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git commit -m \"Build static files for GitHub Pages deployment\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git push origin main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"âœ… Static files built and pushed to GitHub\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ðŸ”— Enable GitHub Pages in your repo settings to deploy from /dist folder\""

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
