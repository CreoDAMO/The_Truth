modules = ["nodejs-20", "web", "bash"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "node index.js"]

[workflows]
runButton = "Start Minting App"

[[workflows.workflow]]
name = "Start Minting App"
author = 46990582
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node web/server.js"

[[workflows.workflow]]
name = "Universal Deploy"
author = 46990582
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x deploy-everywhere.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Ready for universal deployment! Use: npm run deploy:[platform]\""

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
